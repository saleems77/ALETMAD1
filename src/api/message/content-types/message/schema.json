{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "message"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "string"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "message"
    },
    "timestamp": {
      "type": "datetime"
    },
    "isInstructor": {
      "type": "boolean",
      "default": true
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "message": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::message.message",
      "inversedBy": "messages"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "message"
    },
    "course_chat": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-chat.course-chat",
      "inversedBy": "messages"
    }
  }
}
